<Window x:Class="Settings.MessageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Settings"
        mc:Ignorable="d"
        Title="Внимание" Height="240" Width="640" ResizeMode="NoResize" ShowInTaskbar="False" Topmost="True" WindowStartupLocation="CenterOwner" WindowStyle="ToolWindow" BorderThickness="0">
    <Grid Background="#FFF9ECBE" >
        <Grid.RowDefinitions>
            <RowDefinition Height="143*"/>
            <RowDefinition Height="68*"/>
        </Grid.RowDefinitions>
        <Label x:Name="label" Content="Сообщение"  FontSize="24"  Grid.Row="0" FontWeight="Bold" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />
        <Button x:Name="button" Content="Подтвердил" HorizontalAlignment="Center"  VerticalAlignment="Center" Grid.Row="1" Padding="10" IsDefault="True" Click="button_Click"/>

    </Grid>
</Window>
